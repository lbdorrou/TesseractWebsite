<div class="row transparent third" style="overflow: hidden; padding: 0; padding-bottom: 20px" >
  <div class="owl-carousel third" id="showCase">

    <% @show.each do |item| %>
        <a href="<% if item.is_a?(Project)%><%= project_path(item)%><% else %><%= course_path(item)%><% end %>">
        <div class="item third loading " style="overflow: hidden; " >


          <img class="owl-lazy" style="height: 120%; width: auto" data-src="<%= item.mainImg %>"  alt="">

          <h2 class="center " style="position: absolute; top: 60px;"><%= item.title %></h2>
          <h4 class="center hoverDiv" style=" position: absolute; bottom: 10px;">Learn more     <i class="fa fa-angle-right"></i></h4>

        </div>
        </a>


    <% end %>
  </div>
</div>






<div class="row transparent" style="padding: 0;">
  <div class="col-md-12 col-lg-6 ">
    <h1 class="blackBack">LATEST NEWS</h1>
    <% @news.each_with_index do |blog, i| %>
        <a class="news" href="<%= blog_path(blog) %>">
          <div class="row whiteBack hoverDiv" style=" overflow: hidden; padding-left: 0">
            <div class="col-md-9" style="height: auto; padding: 10px 10px 10px 10px;  ">
              <div style="max-height: 200px; border: solid 1px #e5e5e5;overflow: hidden;"><%= image_tag(blog.mainImg.url, lazy: true, class: 'lazyImg', style: "width: 100%;" ) %></div>
              <h2 class="center" style="margin-top: -10%; position: relative;"><%= blog.title %> </h2>
            </div>
            <div class="col-md-3" style="height: 200px; padding: 10px 10px 10px 10px; ">
              <h2 ><%= blog.date.strftime("%B") %> <%= blog.date.strftime("#{blog.date.day.ordinalize}") %> <%= blog.date.strftime("%Y") %></h2>
              <p><%= blog.tagLine %></p>


            </div>

          </div>
        </a>

        <hr style="margin-top: 5px; margin-bottom: 5px;  border: 0">



    <% end %>
  </div>
  <div class=" col-md-12 col-lg-6 ">
    <h1 class="blackBack">LATEST DEVELOPMENT BLOGS</h1>
    <% @blogs.each_with_index do |blog, i| %>
        <a class="news" href="<%= blog_path(blog) %>">
          <div class="row hoverDiv whiteBack" style=" overflow: hidden; padding-left: 0">
            <div class="col-md-9" style="height: auto; padding: 10px 10px 10px 10px;  ">
              <div style="max-height: 200px; border: solid 1px #e5e5e5;overflow: hidden;"><%= image_tag(blog.mainImg.url, lazy: true , class: 'lazyImg', style: "width: 100%;" ) %></div>
              <h2 class="center" style="margin-top: -10%; position: relative;"><%= blog.title %> </h2>
            </div>
            <div class="col-md-3" style="height: 200px; padding: 10px 10px 10px 10px; ">
              <h2 ><%= blog.date.strftime("%B") %> <%= blog.date.strftime("#{blog.date.day.ordinalize}") %> <%= blog.date.strftime("%Y") %></h2>
              <p><%= blog.tagLine %></p>

            </div>

          </div>
        </a>

        <hr style="margin-top: 5px; margin-bottom: 5px; border: 0">



    <% end %>
  </div>

</div>

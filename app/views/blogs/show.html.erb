<div class="row full" style="overflow: hidden; padding-left: 0px; ">
  <div class="row greyTransparent diagonal" style=" overflow: hidden; padding-left: 0px;">
    <div class="col-lg-6 col-md-7 col-sm-12" style="padding: 0">
     	<%= image_tag(@blog.mainImg.url(:medium), style: "width: 100%")%>
    </div>
  </div>
  
  <div class="row transparent"  style="border-top: solid 1px #000; ">
    <h1 style="margin: .1rem .5rem 0rem" ><%= @blog.title %></h1>
  </div>
  <div class="row transparent"  >
    <h3 style="margin: 0rem .5rem .5rem" ><%= @blog.date.strftime("%B") %> <%= @blog.date.strftime("#{@blog.date.day.ordinalize}") %> <%= @blog.date.strftime("%Y") %></h3>
  </div>
  
  
	  <div class="row light" style="padding-top: 30px; padding-bottom: 30px; padding-right: 20px; border-top: solid 1px #000;  min-height: 100vh;" >
			 
			 <div class="col-lg-2 col-md-3 hidden-sm hidden-xs" >

			
			    <div class="round-image-res floatCenter" style="max-width: 60%;"><%= image_tag(@userInfo.avatar.url(:medium)) %></div>
        		<h4 class="text-center"><%= @userInfo.firstName %> <%= @userInfo.lastName %></h4>
			  
			  
			  </div>
			 <div class="col-lg-6 col-md-7 blogContent" >

			 	  <%= @blog.content.html_safe %>
				  
				  
				  
					<% if can? :update, @blog %>
						<% if current_user.role == "author" && @blog.publisher != current_user.email %>
							<hr>
							<h2 class="text-center">NOT YOUR ENTRY</h2>
						<% else %>
					<hr>
					<h2 class="text-center"><%= link_to 'Edit', edit_blog_path(@blog) %> <% if can? :delete, @blog %> | <%= link_to 'Destroy', @blog, method: :delete, data: { confirm: 'Are you sure?' } %> <i class="fa fa-exclamation-triangle"></i><% end %></h2>

						<% end %>
        			<% end %>
			</div>
			<div class="col-sm-12 hidden-md hidden-lg" >

			
			    <div class="round-image-res floatCenter" style="max-width: 30%;"><%= image_tag(@userInfo.avatar.url(:medium)) %></div>
        		<h4 class="text-center"><%= @userInfo.firstName %> <%= @userInfo.lastName %></h4>
			  
			  	
			  </div>
		


	  </div>
  
  </div>

			

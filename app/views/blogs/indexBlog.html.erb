<div class="row transparent full" style="overflow: hidden; padding-left: 0px; ">
 
  <div class="col-lg-3"></div>
  <div class="col-lg-6 greyTransparent full" style="padding-top: 20px;">



    <% @blogs.each_with_index do |blog, i| %>
        <% if blog.show or can? :update, blog %>
<a class="projectLinks" href="<%= blog_path(blog) %>">
    <div class="row diagonal" style=" padding-left: 0">
      <div class="col-md-5" style="">
        <div><%= image_tag(blog.mainImg.url(:medium), lazy: true, style: "width: 100%;",:class => "img-responsive" ) %></div>
        
        <% if !blog.show %>
            <h4  class="text-center whiteBack" style="top: 30%; position: absolute;">HIDDEN</h4>
        <% end %>
      </div>
	  
	  
      <div class="col-md-7" >
	  	<h4><%= blog.title %> </h4>
        <p style="margin: .1rem .5rem .5rem;  line-height: 1;"><%= blog.date.strftime("%B") %> <%= blog.date.strftime("#{blog.date.day.ordinalize}") %> <%= blog.date.strftime("%Y") %></p>
        

      </div>

    </div>
</a>

        <hr style="margin-top: 5px; margin-bottom: 5px; border-top: 1px solid #252525;">


        <% end %>
    <% end %>


  </div>


</div>

<script>
    $("img").lazyload({
        effect : "fadeIn"
    });
	
	
	
</script>



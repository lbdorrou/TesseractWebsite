    <hr>
    <div class="row">
      <div class="col-md-1"></div>
      <div class="col-md-5">
        <p>Are you ready for this to be displayed? Leave unpublished to come back later and finish.</p>
        <label>Published</label>
        <%= f.check_box :show %>
      </div>
      <div class="col-md-5">
        <div class="form-group">
          <%= f.submit "Submit", class: 'btn' %>
        </div>
      </div>
  </div>


<div class="row transparent full" style="overflow: hidden; padding-left: 0px; ">
  <div class="row greyTransparent diagonal" style=" overflow: hidden; padding-left: 0px;">
    <div class="col-lg-5 col-md-7 col-sm-12" style="padding: 0">
     	<img  class="img-responsive" src="<%= asset_path('welcome.jpg') %>"></img>
    </div>
  </div>
  
  <div class="row transparent"  style="border-top: solid 1px #000; ">
    <h1 style="margin: .1rem .5rem 0rem" >PROFILE</h1>
  </div>
  <div class="row transparent"  >
    <h3 style="margin: 0rem .5rem .5rem" >Welcome to Tesseract, <%= current_user.firstName%></h3>
  </div>
  
  
  <div class="row light" style="padding-top: 30px; padding-bottom: 30px; border-top: solid 1px #000;  min-height: 100vh;" >
  	 
  

        <div class="col-md-1"></div>
        <div class="col-md-5">
           <div class="row">

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
          <%= devise_error_messages! %>

        <div class="col-md-6">
            <div class="form-group">
              <%= f.label :website %><br />
              <%= f.text_field :website, class: 'form-control'%>
            </div>

            <div class="form-group">
              <label>Quick Bio (Max Length: 200 characters)</label>
              <%= f.text_area :bio,:rows => 8, :resize => 'none' ,  :maxlength => 200, class: 'form-control'%>
            </div>

          <div class="form-group">
            <%= f.label :email %><br />
            <%= f.email_field :email, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
            <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= f.label :password_confirmation %><br />
            <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
            <%= f.password_field :current_password, autocomplete: "off", class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= f.submit "Update", class: 'btn' %>
          </div>
        </div>
      <div class="col-md-6">
        <div class="form-group">
          <%= f.label :firstName%><br />
          <%= f.text_field :firstName, :maxlength=> 15 , class: 'form-control', autofocus: true %>
        </div>
        <div class="form-group">
          <%= f.label :lastName %><br />
          <%= f.text_field :lastName, class: 'form-control'%>
        </div>

        <div class="form-group">
          <%= f.label "Department" %><br />
          <%= f.collection_select :category, Rails.configuration.x.displayOptions.userCategories, :to_s, :humanize,{}, {:class => 'form-control'}%>
        </div>

        <div class="form-group">
          <%= f.label :job %><br />
          <%= f.text_field :job, class: 'form-control'%>
        </div>

        <div class="form-group">
          <label>Avatar</label>
          <%= f.file_field :avatar, class: "form-control"  %><br>
          <%= image_tag @user.avatar.url(:medium), class: "well"  %>
        </div>
      </div>
        <% end %>

    </div>


        </div>
        
        </div>

  
  
  
  
  
  </div>
</div>


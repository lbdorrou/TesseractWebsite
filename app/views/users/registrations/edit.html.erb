<div class="row transparent full" style="overflow: hidden; padding-left: 0px; ">
  <div class="centerPage">

    <div style="overflow: hidden; height:25vh; width: 832px;">
      <img  src="<%= asset_path('welcome.jpg')%>" style="width: 832px; "></img>
    </div>
    <h1 class="center" style="margin-top: -20vh; position: relative;">WELCOME TO TESSERACT</h1>

<div class="row">
  <div class="col-md-12">
    <h2>Edit Profile - <%= current_user.role%></h2>

  </div>
</div>

    <hr>

<div class="row">

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
          <%= devise_error_messages! %>

        <div class="col-md-6">
            <div class="form-group">
              <%= f.label :website %><br />
              <%= f.text_field :website, class: 'form-control'%>
            </div>

            <div class="form-group">
              <label>Quick Bio (Max Length: 350 characters)</label>
              <%= f.text_area :bio,:rows => 8, :resize => 'none' ,  :maxlength => 350, class: 'form-control'%>
            </div>

          <div class="form-group">
            <%= f.label :email %><br />
            <%= f.email_field :email, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
            <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= f.label :password_confirmation %><br />
            <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
            <%= f.password_field :current_password, autocomplete: "off", class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= f.submit "Update", class: 'btn' %>
          </div>
        </div>
      <div class="col-md-6">
        <div class="form-group">
          <%= f.label :firstName%><br />
          <%= f.text_field :firstName, :maxlength=> 15 , class: 'form-control', autofocus: true %>
        </div>
        <div class="form-group">
          <%= f.label :lastName %><br />
          <%= f.text_field :lastName, class: 'form-control'%>
        </div>

        <div class="form-group">
          <%= f.label "Department" %><br />
          <%= f.collection_select :category, Rails.configuration.x.displayOptions.userCategories, :to_s, :humanize,{}, {:class => 'form-control'}%>
        </div>

        <div class="form-group">
          <%= f.label :job %><br />
          <%= f.text_field :job, class: 'form-control'%>
        </div>

        <div class="form-group">
          <label>Avatar</label>
          <%= f.file_field :avatar, class: "form-control"  %><br>
          <%= image_tag @user.avatar.url(:medium), class: "well"  %>
        </div>
      </div>
        <% end %>

    </div>
  </div>
</div>

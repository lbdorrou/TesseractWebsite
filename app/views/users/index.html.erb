<div class="row transparent full" style="overflow: hidden; padding-left: 20px; padding-right: 20px">
    <% @users.each do |userSet| %>
      <% if !userSet.empty? %>

        <div class="row transparent" style="padding-left: 20px; padding-right: 20px; margin-bottom: 1%;  margin-top: 20px;background-color: RGBA(150,150,150,0.1);">
            <h1 class="blackBack"><%= userSet.first.category %></h1>
        

      <div>

         <% userSet.each do |user| %>
        	<% if user.show or can? :update, user %>

            
                <div class="userGridParent" >
				<% if !user.show %>
				  <div class="gridContent redDiagonal">
			  	<% else %>
			  		<div class="gridContent diagonal">
                  <% end %>					
						<div class="round-image-res floatCenter" style="width: 90%; margin-top: 5%"><%= image_tag(user.avatar.url(:medium), lazy: true) %></div>
						 <h4 style="margin: .1rem .5rem .1rem; font-size: 20px;"><%= user.firstName%> <%= user.lastName%></h4>
						 <p style="margin: .1rem .5rem .5rem;  line-height: 1; font-size: 16px;"><%= user.job %></p> 
						 <p style="margin: .1rem .5rem .5rem;  line-height: 1; font-size: 16px; color: RGB(250,250,250);"><i>"<%= user.bio %>"</i></p>
						  <% if !user.website.blank? %>
							  <h4 style="font-size: 16px"><a class="headerLinks" href="<%= user.website %>" target="_blank">[WEBSITE]</a></h4>
						  <% end %>
						  
						    
						  <% if can? :delete, user %>
							  <h4 class="text-center whiteBack" style="top: 40px; position: absolute; color: red"><%= link_to 'DELETE', user, method: :delete, data: { confirm: 'Are you sure? THIS COULD BRAKE MAJOR STUFF!' } %>  <i class="fa fa-exclamation-triangle"></i></h4>
						  <% end %>
						  <% if can? :update, user %>
							  <a href="<%= edit_user_path(user) %>" class="text-center whiteBack" style="top: 10px; position: absolute;">EDIT</a>
						  <% end %>
							
					</div>
                 
				
                </div>
            

        <% end %>

      <% end %>
      </div>
	  </div>
          <% end %>
    <% end %>

</div>

<script>
    $("img").lazyload({
        effect : "fadeIn"
    });
	
	
	
</script>

